{
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "SecretKey": "ThisIsAVeryLongSecretKeyForJWTTokensThatShouldBeAtLeast256BitsForDevelopment",
    "Issuer": "CurrencyConverter.API.Development",
    "Audience": "CurrencyConverter.API.Users.Development",
    "ExpirationMinutes": 120
  },
  "ApiSettings": {
    "RateLimiting": {
      "RequestsPerMinute": 1000,
      "RequestsPerHour": 10000,
      "RequestsPerDay": 100000,
      "EnableThrottling": true
    },
    "Cache": {
      "DefaultExpirationMinutes": 15,
      "ExchangeRatesCacheMinutes": 5,
      "HistoricalRatesCacheHours": 24,
      "EnableDistributedCache": false,
      "FallbackToMemoryCache": true
    },
    "ExternalApis": {
      "FrankfurterApi": {
        "BaseUrl": "https://api.frankfurter.app",
        "TimeoutSeconds": 30,
        "MaxRetryAttempts": 3,
        "CircuitBreakerFailureThreshold": 5,
        "CircuitBreakerTimeoutSeconds": 30,
        "EnableCircuitBreaker": true,
        "EnableRetryPolicy": true
      }
    }
  },
  "Throttling": {
    "MaxRequests": 1000,
    "TimeWindowMinutes": 1
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "CurrencyConverter.API",
      "Environment": "Development"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}

{
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "SecretKey": "ThisIsAVeryLongSecretKeyForJWTTokensThatShouldBeAtLeast256Bits",
    "Issuer": "CurrencyConverter.API",
    "Audience": "CurrencyConverter.API.Users",
    "ExpirationMinutes": 60
  },
  "ApiSettings": {
    "RateLimiting": {
      "RequestsPerMinute": 100,
      "RequestsPerHour": 1000,
      "RequestsPerDay": 10000,
      "EnableThrottling": true
    },
    "Cache": {
      "DefaultExpirationMinutes": 15,
      "ExchangeRatesCacheMinutes": 5,
      "HistoricalRatesCacheHours": 24,
      "EnableDistributedCache": true,
      "FallbackToMemoryCache": true
    },
    "ExternalApis": {
      "FrankfurterApi": {
        "BaseUrl": "https://api.frankfurter.app",
        "TimeoutSeconds": 30,
        "MaxRetryAttempts": 3,
        "CircuitBreakerFailureThreshold": 5,
        "CircuitBreakerTimeoutSeconds": 30,
        "EnableCircuitBreaker": true,
        "EnableRetryPolicy": true
      }
    }
  },
  "Throttling": {
    "MaxRequests": 100,
    "TimeWindowMinutes": 1,
    "EnableWhitelist": false
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore.Authentication": "Information",
        "CurrencyConverter": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName"],
    "Properties": {
      "Application": "CurrencyConverter.API",
      "Environment": "Production"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Information"
    }
  },
  "AllowedHosts": "*"
}
